{
    "name": "kredi-mobile-backend",
    "version": "1.0.0",
    "description": "Application interface to manage requests",
    "scripts": {
        "copy-html": "copyfiles -u 1 src/**/*.* build",
        "build": "rimraf ./build && tsc && npm run copy-html",
        "start": "npm run build && node build/src/server.js",
        "dev": "nodemon src/index.ts",
        "test": "jest",
        "typeorm": "npx typeorm",
        "migration:generate": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./src/config/typeorm.config.ts ./src/database/migrations/migration",
        "migration:run": "npx typeorm migration:run -d ormconfig.ts",
        "migration:revert": "npx typeorm migration:revert -d ormconfig.ts",
        "lint": "eslint src/**/*.{ts,js}",
        "lint:fix": "eslint src/**/*.{ts,js} --fix",
        "format": "prettier --write src/**/*.{ts,js}",
        "prettier:check": "prettier --check src/**/*.{ts,js}"
    },
    "engines": {
        "node": ">=22.12.0"
    },
    "keywords": [],
    "author": "Kredi Developers",
    "license": "ISC",
    "devDependencies": {
        "@faker-js/faker": "^9.3.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.2",
        "@types/prettier": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^8.13.0",
        "@typescript-eslint/parser": "^8.13.0",
        "aws-sdk-client-mock": "^4.1.0",
        "copyfiles": "^2.4.1",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.9",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.5",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-async-errors": "^3.1.1",
        "express-rate-limit": "^7.4.1",
        "helmet": "^8.0.0",
        "ioredis": "^5.4.1",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "mysql2": "^3.12.0",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.15",
        "typeorm": "^0.3.20",
        "winston": "^3.15.0",
        "zeptomail": "^6.0.0"
    },
    "husky": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.{ts,js}": [
            "prettier --write",
            "eslint src/**/*.{ts,js}"
        ]
    }
}
